{
  "env": {
    "jest": true
  },
  "extends": [
    "next",
    "next/core-web-vitals",
    "next/typescript",
    "eslint:recommended"
  ],
  "globals": {
    "React": "readonly"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off", // Disables the TypeScript-specific unused vars rule
    "@typescript-eslint/no-explicit-any": "off", // Disables errors for using 'any' type
    "@typescript-eslint/no-empty-interface": "off", // Allows empty interfaces without warnings
    "@typescript-eslint/no-empty-object-type": "off"
  }
}
